{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2018",

    "strict": true,
    "alwaysStrict": true,

    "allowJs": false,
    "checkJs": false,
    "sourceMap": false,
    "removeComments": false,
    "declaration": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": false,

    "noErrorTruncation": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noEmit": true,

    "keyofStringsOnly": true,
  },

  "include": [
    "./src",
    "./examples",

    ".eslintrc.js",
    "commitlint.config.js",
    "husky.config.js",
    "jest.config.js",
  ],

  "exclude": [
    "./node_modules",
    "./build/workspace",
  ],
}
